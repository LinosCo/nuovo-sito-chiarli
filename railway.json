{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd cms && npm install && npm run build",
    "watchPatterns": [
      "cms/**",
      "src/content/**"
    ]
  },
  "deploy": {
    "startCommand": "node scripts/start-railway.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
