# Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# Server
PORT=3001
NODE_ENV=development

# Paths
CONTENT_PATH=../content
UPLOADS_PATH=../public/uploads
SITE_PATH=..

# Frontend URL (per CORS)
FRONTEND_URL=http://localhost:3000

# Git (opzionale, per versioning automatico)
GIT_AUTO_COMMIT=true
GIT_AUTHOR_NAME=CMS Bot
GIT_AUTHOR_EMAIL=cms@chiarli.it

# Business Tuner Integration (opzionale)
# API key per autenticare richieste da Business Tuner
BUSINESS_TUNER_API_KEY=bt_live_your_key_here

# URL del webhook per inviare notifiche a Business Tuner
BUSINESS_TUNER_WEBHOOK_URL=https://api.businesstuner.io/webhooks/cms/conn_xxx

# Secret per firmare i webhook (HMAC-SHA256)
BUSINESS_TUNER_WEBHOOK_SECRET=whsec_your_secret_here

# URL della dashboard Business Tuner (per link esterni)
BUSINESS_TUNER_URL=https://app.businesstuner.io

# URL pubblici del CMS (per Business Tuner)
CMS_URL=http://localhost:3001
DASHBOARD_URL=http://localhost:3002
