# Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# Server
PORT=3001
NODE_ENV=development

# Paths
CONTENT_PATH=../public/content
UPLOADS_PATH=../public/uploads
SITE_PATH=..

# Frontend URL (per CORS)
FRONTEND_URL=http://localhost:3000

# Git (opzionale, per versioning automatico)
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true
GIT_AUTHOR_NAME=CMS Bot
GIT_AUTHOR_EMAIL=cms@chiarli.it

# GitHub (per push automatico)
GITHUB_TOKEN=ghp_your_personal_access_token
GITHUB_REPO=LinosCo/nuovo-sito-chiarli

# Business Tuner Integration
# URL base di Business Tuner
BUSINESS_TUNER_URL=https://businesstuner.voler.ai

# API key per autenticare richieste da Business Tuner (CMS_API_KEY su BT)
BUSINESS_TUNER_API_KEY=bt_live_your_key_here

# Connection ID della connessione CMS (fallback se non passato via query params)
BUSINESS_TUNER_CONNECTION_ID=conn_xxx

# URL del webhook per inviare notifiche a Business Tuner
BUSINESS_TUNER_WEBHOOK_URL=https://businesstuner.voler.ai/api/webhooks/cms/conn_xxx

# Secret per firmare i webhook (HMAC-SHA256)
BUSINESS_TUNER_WEBHOOK_SECRET=whsec_your_secret_here

# URL pubblici del CMS (per Business Tuner)
CMS_URL=http://localhost:3001
DASHBOARD_URL=http://localhost:3002

# Session Configuration
# Secret per firmare le sessioni (generare con: openssl rand -hex 32)
SESSION_SECRET=your_session_secret_here
