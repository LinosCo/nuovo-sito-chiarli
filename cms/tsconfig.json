{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "services/**/*.ts",
    "middleware/**/*.ts",
    "controllers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "dashboard"]
}
